# Backend Configuration
# Copy this file to .env.local and configure with your actual values

# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/semicrypto?retryWrites=true&w=majority
DB_NAME=semicrypto

# Authentication
JWT_SECRET=your_jwt_secret_key_here_min_32_characters_very_important
JWT_EXPIRY=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_here_min_32_characters
REFRESH_TOKEN_EXPIRY=30d

# Email Configuration (for OTP verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@semicrypto.com

# Encryption
ENCRYPTION_KEY=your_encryption_key_min_32_chars_9d8e7f6g5h4i3j2k1l

# Third-party APIs
STOCK_API_KEY=your_stock_api_key
CRYPTO_API_KEY=your_crypto_api_key

# Logging
LOG_LEVEL=debug
